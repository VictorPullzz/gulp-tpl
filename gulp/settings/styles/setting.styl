/* Forms reset */
form-reset()
	button
	input
	select
	textarea
		margin 0
		padding 0
		border none
		outline none
		background none
		box-shadow none

	button
	select
		cursor pointer

	input[type=checkbox]
		cursor pointer

	input[type=radio]
		cursor pointer

/* //Forms reset */

/* Flex box settings */

flex(ff = row, jc = flex-start, ai = flex-start, fw = nowrap)
	display flex
	flex-flow ff
	justify-content jc
	align-items ai
	flex-wrap fw
/* //Flex box settings */
